<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lamalis.uncedo.TermsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/uncedologo" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="104dp"
        android:text="Before you launch a complaint, Please check that you have:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRegistration"
        android:layout_alignRight="@+id/btnRegistration"
        android:layout_below="@+id/textView"
        android:layout_marginTop="33dp"
        android:text="Included as much relevant information as possible"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_marginBottom="18dp"
        android:text="Given details of the health service provider you are complaining about."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginBottom="22dp"
        android:text="Clearly identified your concerns."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkBox4"

        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegistration"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginBottom="28dp"
        android:text="I authorise The Department Of Health to access my personal health information for the purpose of handling this complaint."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />


    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnExit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Continue" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRegistration"
        android:layout_alignLeft="@+id/btnRegistration"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnRegistration"
        android:layout_alignStart="@+id/btnRegistration"
        android:layout_marginBottom="18dp"
        android:text="Exit" />
</RelativeLayout>
